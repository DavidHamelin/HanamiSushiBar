<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hanami Sushi Bar</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <img src="~/images/SushiLogo.png" class="navbar-nav" id="logoSushi"/>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Hanami Sushi Bar", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a>Sushis</a></li>
                    <li><a>Makis</a></li>
                    <li><a>Sashimis</a></li>
                    <li><a>Brochettes</a></li>
                </ul>
                <button class="btn btn-warning pull-right"><img src="~/images/iconsCaddie.png" id="shop" class="navbar-nav" /></button>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p id="pageUp"><a href="#jumbotron">Haut de la page</a></p>
            <h2>HANAMI Sushi Bar</h2>
            <p class="h4 text-success">02 35 42 39 33</p>
            <p class="text-muted">153 Quai George V - 76600 Le Havre</p>
            <p class="text-center">&copy; @DateTime.Now.Year - Site façonné par <a href="https://davidhamelin.github.io/">D. Hamelin | Web Developer</a> </p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/script.js"></script>
</body>
</html>
